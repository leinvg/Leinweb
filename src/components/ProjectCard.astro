---
const pending = "En desarrollo";
const { tag = pending, name = "Nombre del proyecto", link = "/" } = Astro.props;
---

<div
  class="group relative cursor-default bg-neutral-100 w-3xs flex flex-col rounded-3xl border-2 border-neutral-200 transition-all duration-300 overflow-hidden hover:shadow-lg hover:pb-18"
>
  <div class="z-1 bg-neutral-100 p-6 font-semibold">
    <p class="mb-3 text-sm/[1.4] text-foreground-secondary">
      {tag}
    </p>
    <h3
      class={`text-xl/[1.4] font-lexend ${tag != pending ? "text-foreground-primary" : "text-foreground-disabled"} `}
    >
      {name}
    </h3>
  </div>
  <div
    class="absolute bottom-0 w-full p-3 flex opacity-0 transition-opacity duration-300 group-hover:opacity-100"
  >
    <a
      href={link}
      class={`bg-neutral-200 w-full py-4 rounded-xl text-center text-sm/[1] font-semibold transition-all duration-150 ${tag != pending ? "cursor-pointer text-foreground-secondary hover:bg-neutral-300" : "cursor-default text-foreground-disabled"}`}
      >Visualizar</a
    >
  </div>
</div>
