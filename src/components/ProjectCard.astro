---
const pendingTag = "En desarrollo";
const {
  projectTag = pendingTag,
  projectName = "Nombre del proyecto",
  projectLink = "/",
} = Astro.props;
---

<div
  class="group relative cursor-default bg-neutral-100 w-3xs flex flex-col rounded-3xl border-2 border-neutral-200 transition-all duration-300 overflow-hidden hover:shadow-lg hover:pb-18"
>
  <div class="z-1 bg-neutral-100 flex flex-col gap-3 p-6">
    <p class="text-sm/[1.4] text-foreground-secondary font-semibold">
      {projectTag}
    </p>
    <h3
      class=`text-xl/[1.4] ${projectTag != pendingTag ? 'text-foreground-primary' : 'text-foreground-disabled'} font-lexend font-bold`
    >
      {projectName}
    </h3>
  </div>
  <div
    class="absolute bottom-0 w-full p-3 flex opacity-0 transition-opacity duration-300 group-hover:opacity-100"
  >
    <a
      href={projectLink}
      class=`bg-neutral-200 w-full py-4 rounded-xl text-center text-base/[1] font-semibold transition-all duration-150 ${projectTag != pendingTag ? "cursor-pointer text-foreground-secondary hover:bg-neutral-300" : "cursor-default text-foreground-disabled"}`
      >Visualizar</a
    >
  </div>
</div>
